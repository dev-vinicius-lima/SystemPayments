datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Payment {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  nameEmployee String
  salary       String
  discounts    String?
  store        String
  advanceMoney String?
  cardLoan     String?
  bonification String?
  overTime     String?
  datePayment  String

  salaryTotal String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
